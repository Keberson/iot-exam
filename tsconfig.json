{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "ignoreDeprecations": "5.0",
        "noImplicitAny": false,
        "lib": ["ES2022.Error"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
